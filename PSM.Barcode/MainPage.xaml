<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:vm="clr-namespace:PSM.Barcode.ViewModels"
	x:Class="PSM.Barcode.MainPage"
	BindingContext="{x:Static vm:MainViewModel.Instance}"
>
	<ScrollView>
		<VerticalStackLayout>
			<HorizontalStackLayout>
				<Button Margin="3" Command="{Binding CmdAddNew}" Text="Add New Rnd" />
				<Label Margin="3" Text="{Binding Count, StringFormat=Count: {0}}" />
			</HorizontalStackLayout>
			<CollectionView ItemsSource="{Binding BarcodeItems}" Header="Header" Footer="Footer">
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="150" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Label Grid.Column="0" Margin="5" Text="{Binding Barcode}" FontSize="Medium" FontAttributes="Bold" />
							<Label Grid.Column="1" Margin="5" Text="{Binding Outcode}" FontSize="Medium" />
						</Grid>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
