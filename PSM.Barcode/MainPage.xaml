<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:vm="clr-namespace:PSM.Barcode.ViewModels"
	x:Class="PSM.Barcode.MainPage">

	<ContentPage.BindingContext>
		<vm:MainViewModel />
	</ContentPage.BindingContext>
	
	<ScrollView>
		<VerticalStackLayout>
			<HorizontalStackLayout>
				<Button Command="{Binding CmdAddNew}" Text="Add New" />
				<Label Text="{Binding Count}" />
			</HorizontalStackLayout>
			<ListView ItemsSource="{Binding BarcodeItems}">
				<ListView.ItemTemplate>
					<DataTemplate>
						<TextCell Text="{Binding Barcode}" />
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</VerticalStackLayout>
	</ScrollView>

</ContentPage>
