<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:vm="clr-namespace:PSM.Barcode.ViewModels"
	x:Class="PSM.Barcode.MainPage"
	BindingContext="{x:Static vm:MainViewModel.Instance}">
	<!--<ContentPage.BindingContext>
		<vm:MainViewModel />
	</ContentPage.BindingContext>-->
	<ScrollView>
		<VerticalStackLayout>
			<HorizontalStackLayout>
				<Button Margin="3" Command="{Binding CmdAddNew}" Text="Add New Rnd" />
				<Label Margin="3" Text="{Binding Count, StringFormat=Count: {0}}" />
			</HorizontalStackLayout>
			<CollectionView ItemsSource="{Binding BarcodeItems}" Header="Header" Footer="Footer">
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<Label Text="{Binding Barcode}" />
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
